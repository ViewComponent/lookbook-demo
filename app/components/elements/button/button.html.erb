<a href= <%= @href %> class="rounded-md px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 
  <%= class_names({
     "bg-pink-600 hover:bg-pink-500 focus-visible:outline-pink-600": (@theme == :primary),
    "bg-red-600 hover:bg-red-500 focus-visible:outline-red-600": (@theme == :danger)
  }) %>">
  <span><%= content %></span>
</a>
